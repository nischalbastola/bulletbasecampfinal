# BULLET BASECAMP SECURITY CONFIGURATION
# Copy this file to .env and fill in secure values

# Flask Security
FLASK_SECRET_KEY=your_super_secure_random_secret_key_here_min_32_chars
FLASK_ENV=production

# Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_super_secure_admin_password_here

# Security Settings
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_PER_MINUTE=10

# File Upload Security
MAX_FILE_SIZE_MB=5
UPLOAD_SCAN_VIRUSES=true

# Database Encryption (for future use)
DB_ENCRYPTION_KEY=your_database_encryption_key_here

# Email Settings (for alerts)
SECURITY_EMAIL_ENABLED=false
SECURITY_EMAIL_TO=admin@bulletbasecamp.com
SECURITY_EMAIL_FROM=security@bulletbasecamp.com

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_FILE=logs/security.log 